try:
    a = int(input("請輸入第一個正整數 a（a < b）："))
    b = int(input("請輸入第二個正整數 b（a < b）："))
    
    if a >= b:
        print("輸入無效，請確保 a < b。")
    else:
        total_sum = 0
       
        for i in range(a, b + 1):
           
            if i % 2 == 0:
                total_sum += i  
                
        print(f"從 {a} 到 {b} 的偶數連加總和為：{total_sum}")

except VE:
    print("輸入無效，請輸入正整數。")
